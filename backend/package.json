{
  "name": "drafti-backend",
  "version": "1.0.0",
  "description": "Backend code for the Drafti",
  "main": "build/server.js",
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production tsc",
    "postbuild": "npm run copy-file",
    "clean": "rimraf ./build",
    "copy-file": "cpy '**/*' '!**/*.ts' ../build --cwd=src/ --no-overwrite --parents",
    "compile": "cross-env NODE_ENV=production tsc",
    "dev": "cross-env NODE_ENV=development node_modules/.bin/ts-node-dev --respawn --notify false --prefer-ts --ignore-watch node_modules -- src/server.ts ",
    "format": "prettier --write 'src/**/*.ts'",
    "git:conflicts": "git diff --name-only --diff-filter=U",
    "linter": "tslint --fix --project .",
    "start": "node build/server.js",
    "sort:imports": "import-sort --write './src/**/*.ts'"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/libxmljs": "^0.18.6",
    "@types/xml2json": "^0.11.3",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fast-xml-parser": "^3.17.4",
    "he": "^1.2.0",
    "helmet": "^3.21.3",
    "import-sort-cli": "^6.0.0",
    "import-sort-style-renke": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "libxmljs": "^0.19.7",
    "md5": "^2.3.0",
    "moment": "^2.29.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24",
    "uuid": "^7.0.2",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/hapi__joi": "^16.0.12",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/md5": "^2.2.0",
    "@types/node": "^13.9.0",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^7.0.2",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.2",
    "express-routes-catalogue": "^1.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "trailingComma": "all"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "renke"
    }
  },
  "lint-staged": {
    "*.ts": [
      "import-sort --write",
      "prettier --write",
      "tslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
